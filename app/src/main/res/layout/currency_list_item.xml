<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currency_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@drawable/list_item_border"
    >

  <ImageView
      android:id="@+id/currency_list_item_icon"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_weight="0.1"
      android:src="@drawable/background_startup_splash" />

  <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="0dp"
      android:layout_gravity="center"
      android:paddingLeft="5dp"
      android:layout_weight="1.8"
      android:orientation="vertical">

    <TextView
        android:id="@+id/currency_list_item_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Bitcoin"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/currency_list_item_text_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC" />
  </LinearLayout>

  <LinearLayout
      android:layout_height="match_parent"
      android:layout_width="0dp"
      android:layout_weight="3"
      android:paddingLeft="20dp"
      android:gravity="center"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/currency_list_item_text_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:fontFamily="sans-serif-black"
        android:maxLength="8"
        android:text="$ 200 000"
        android:textAlignment="viewStart"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/currency_list_item_text_change24Hr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:fontFamily="sans-serif-medium"
        android:paddingRight="10dp"
        android:text="5.67%"
        android:textAlignment="viewEnd"
        android:textColor="@color/ticker_green_primary" />

  </LinearLayout>

</LinearLayout>