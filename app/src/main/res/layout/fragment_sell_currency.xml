<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SellCurrencyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_border"
        android:backgroundTint="@color/background_main_light"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Currency"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/fragment_sell_currency_edit_currency_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:hint="Amount"
                android:inputType="number|numberDecimal"
                android:maxLines="1"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="USD"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/fragment_sell_currency_tw_usd_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:hint="Amount"
                android:maxLength="8"
                android:maxLines="1"
                android:textAlignment="center" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_sell_currency_button_sell"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_sell"
                android:text="Sell"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:background="@drawable/list_item_border"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/fragment_sell_information_tw"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:layout_weight="0.5"
                android:layout_marginTop="4dp"
                android:text="All purchases in USD"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:layout_weight="0.5"
                android:text="Portfolio Balance: "
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/fragment_sell_currency_symbol_tw"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_weight="0.5"
                android:text=""
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/fragment_sell_currency_balance_tw"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:maxLength="8"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>