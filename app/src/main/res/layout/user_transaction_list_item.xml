<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_transaction_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:background="@drawable/list_item_border"
    >

  <ImageView
      android:id="@+id/user_transaction_list_item_icon"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_weight="0.1"
      android:src="@drawable/background_startup_splash" />

  <LinearLayout
      android:layout_height="50dp"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/user_transaction_list_order_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:fontFamily="sans-serif-black"
        android:text="Buy"
        android:textAlignment="viewStart"
         />

    <TextView
        android:id="@+id/user_transaction_list_currency_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:fontFamily="sans-serif-black"
        android:text="Binance-Coin"
        android:textAlignment="viewStart"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_transaction_list_currency_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:fontFamily="sans-serif-black"
        android:text="0.001"
        android:maxLength="9"

        android:textAlignment="center"
        android:textSize="16sp" />
  </LinearLayout>

</LinearLayout>